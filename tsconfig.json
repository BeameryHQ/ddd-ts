{
  "include": [
    "src"
  ],
  "exclude": [
    "dist"
  ],
  "files": [
    "global.d.ts"
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "incremental": false,
    "sourceMap": false,
    "skipLibCheck": true,
    "target": "ES2018",
    "isolatedModules": true,
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "allowJs": false,
    "types": [
      "jest",
      "node"
    ],
    "removeComments": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": false
  }
}
